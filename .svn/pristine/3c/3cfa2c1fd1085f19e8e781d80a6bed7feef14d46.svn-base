/* FOR ADMIN SIDEBAR */

.page-wrapper {
	height: 100%;
	margin-right: 0px;
	margin-top: 60px;
}

.sidebar {
	background: #f8f8f8;
	padding-right: 0px;
	border-right:1px solid #e7e7e7;
	margin-top:60px;
	overflow: auto;
}

@media (min-width: 992px) {
	.sidebar {
		width: 248px;
		position: fixed;
		height: 100%;
		padding-bottom: 50px;
	}
}

.sidebar > ul > li > a {
	font-weight: bold;
}

.sidebar .sub-menu {
	list-style-type: none;
}

.sidebar .nav-pills li a{
	border-radius: 0px;
}

.sidebar .sub-menu li 
{
	padding-left: 30px;
	background-image: url(../images/arrow2.png);
	background-repeat: no-repeat;
	background-position: 1em 0.5em;
}
.sidebar .sub-menu li:hover {
	background-color: #eee;	
	background-image: url(../images/arrow2-hover.png);
}

.sidebar .sub-menu li.active {
	background-color:#2c3e50;
	background-image: url(../images/arrow2-white.png);
}






